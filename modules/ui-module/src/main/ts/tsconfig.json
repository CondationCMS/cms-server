{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src/",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "lib": ["dom", "es2020"],
    "sourceMap": false,
    "paths": {
      "@cms/modules/*": ["js/modules/*"],
      "@cms/libs/*": ["js/libs/*"],
      "@cms/*": ["js/*"],
    }
  },
  "include": [
    "src/**/*",
    "globals.d.ts"
  ]
}
